

class CalculatorController {
  constructor(calculator) {
    this.calculator = calculator;
  }

  async lockNumberValue(req, res) {
    if (!this.calculator) {
      res.status(500).json({ message: 'Calculator object is null or undefined' });
      return;
    }

    if (!req.body) {
      res.status(400).json({ message: 'Request body is null or undefined' });
      return;
    }

    try {
      const result = await this.calculator.lockNumberValue(req.body);
      if (typeof result !== 'number') {
        res.status(500).json({ message: 'Invalid result type' });
        return;
      }
      res.json(result);
    } catch (error) {
      res.status(500).json({ message: error.message });
    }
  }
}

module.exports = CalculatorController;